<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.history.endtrabajito.endworker.WorkerConfirmationNumberFragment">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Enter the verification number that was given to your boss"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_one_end_confirmation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/edit_text_one_end_confirmation"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_rounded_corners"
        android:cursorVisible="false"
        android:enabled="false"
        android:gravity="center"
        android:hint="1"
        android:imeOptions="actionNone"
        android:inputType="numberDecimal"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@null"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_2_end_confirmation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <EditText
        android:id="@+id/edit_text_2_end_confirmation"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_rounded_corners"
        android:cursorVisible="false"
        android:enabled="false"
        android:gravity="center"
        android:hint="2"
        android:imeOptions="actionNone"
        android:inputType="numberDecimal"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@null"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_3_end_confirmation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit_text_one_end_confirmation"
        app:layout_constraintTop_toTopOf="@+id/edit_text_one_end_confirmation" />

    <EditText
        android:id="@+id/edit_text_3_end_confirmation"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_rounded_corners"
        android:cursorVisible="false"
        android:enabled="false"
        android:gravity="center"
        android:hint="3"
        android:imeOptions="actionNone"
        android:inputType="numberDecimal"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@null"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_4_end_confirmation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit_text_2_end_confirmation"
        app:layout_constraintTop_toTopOf="@+id/edit_text_2_end_confirmation" />

    <EditText
        android:id="@+id/edit_text_4_end_confirmation"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_rounded_corners"
        android:cursorVisible="false"
        android:enabled="false"
        android:gravity="center"
        android:hint="4"
        android:imeOptions="actionNone"
        android:inputType="numberDecimal"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@null"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit_text_3_end_confirmation"
        app:layout_constraintTop_toTopOf="@+id/edit_text_3_end_confirmation" />

    <Button
        android:id="@+id/button_confirm_verification"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mid_padding"
        android:background="@drawable/bg_rounded_corners"
        android:text="Confirm"
        app:backgroundTint="@color/trabajitos_blue"
        app:layout_constraintBottom_toTopOf="@+id/button_cancel_verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_2_end_confirmation"
        app:layout_constraintVertical_bias="0.31"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_cancel_verification"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corners"
        android:text="Cancel"
        app:backgroundTint="@color/white"
        android:textColor="@color/trabajitos_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/mid_padding"
        app:layout_constraintEnd_toEndOf="@id/button_confirm_verification"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/button_confirm_verification"
        app:layout_constraintTop_toBottomOf="@+id/button_confirm_verification" />


</androidx.constraintlayout.widget.ConstraintLayout>