<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/suggested_associates_card"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/user_name_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="Jose"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_lastname_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guidos"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/user_name_card"
                app:layout_constraintTop_toBottomOf="@+id/user_name_card" />


            <ImageView
                android:id="@+id/user_image_card"
                android:layout_width="70dp"
                android:layout_height="125dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_corners_image_repository"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/electrician_icon" />

            <TextView
                android:id="@+id/view_porfolio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="View Portfolio"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/user_lastname_card"
                app:layout_constraintTop_toBottomOf="@+id/user_lastname_card" />

            <TextView
                android:id="@+id/view_check_reviews_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Check Reviews"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/view_porfolio_text"
                app:layout_constraintTop_toBottomOf="@+id/view_porfolio_text" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>