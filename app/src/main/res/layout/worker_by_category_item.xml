<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/worker_selected_cat_cv"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:elevation="16dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/worker_name_selected_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mid_padding"
                    android:text="Worker name"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/worker_cat_selected_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Worker category"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/worker_name_selected_cat"
                    app:layout_constraintTop_toBottomOf="@+id/worker_name_selected_cat" />

                <ImageView
                    android:id="@+id/star_selected_cat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_padding"
                    android:src="@drawable/star_icon"
                    app:layout_constraintStart_toStartOf="@+id/worker_cat_selected_cat"
                    app:layout_constraintTop_toBottomOf="@+id/worker_cat_selected_cat" />

                <ImageView
                    android:id="@+id/star_selected_cat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_icon"
                    app:layout_constraintStart_toEndOf="@+id/star_selected_cat1"
                    app:layout_constraintTop_toTopOf="@+id/star_selected_cat1" />

                <ImageView
                    android:id="@+id/star_selected_cat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_icon"
                    app:layout_constraintStart_toEndOf="@+id/star_selected_cat2"
                    app:layout_constraintTop_toTopOf="@+id/star_selected_cat2" />

                <ImageView
                    android:id="@+id/star_selected_cat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_icon"
                    app:layout_constraintStart_toEndOf="@+id/star_selected_cat3"
                    app:layout_constraintTop_toTopOf="@+id/star_selected_cat2" />

                <ImageView
                    android:id="@+id/star_selected_cat5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_icon"
                    app:layout_constraintStart_toEndOf="@+id/star_selected_cat4"
                    app:layout_constraintTop_toTopOf="@+id/star_selected_cat2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mid_padding"
                    android:text="View Portafolio"
                    app:layout_constraintStart_toStartOf="@+id/star_selected_cat1"
                    app:layout_constraintTop_toBottomOf="@+id/star_selected_cat3" />

                <ImageView
                    android:id="@+id/worker_image_selected_cat"
                    android:layout_width="75dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="@dimen/mid_padding"
                    android:src="@drawable/no_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>
</layout>